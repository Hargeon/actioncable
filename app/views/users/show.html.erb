<h1>Show</h1>

<div>
  <%= @user.id %>
</div>

<div>
  <%= @user.name %>
</div>

<div>
  <%= link_to 'Back', root_path %>
</div>

<div id="live-chat"></div>

<div>
  <%= form_for :message, url: messages_path, remote: true do |f| %>
    <div>
      <%= f.text_field :msg %>
    </div>

    <%= f.hidden_field :owner_id, value: @user.id, id: 'owner_id' %>

    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
